{% extends 'layout.njk' %}

{% block header %}
<link rel="stylesheet" href="/styles/forms.css">
<link rel="stylesheet" href="/styles/animations.css">
{% endblock header %}

{% block content %}
  <div class="card">
    <section class="avatar"
    style="background: url({{ artist.avatar_url }}) no-repeat center center / cover" >
    </section> 

    <section class="details">
      <h3>Editar Artista</h3>

      <form method="post" action="/artists?_method=PUT">
        {% include 'artists/fields.njk' %}
        <input type="hidden" name="id" value={{artist.id}}>
      </form>

      <form id="form-delete" method="post" action="/artists?_method=DELETE">
        <button id="delete" type="submit">
          <span></span>
          <span></span>
          <span></span>
          <span></span>
          EXCLUIR
        </button>
        <input type="hidden" name="id" value={{artist.id}}>
      </form>
    </section>
  </div>
{% endblock content %}