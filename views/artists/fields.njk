<div class="form" id="artistForm">
  <div>Avatar URL</div>
  <div>
    <input 
      type="url"
      name="avatar_url"
      placeholder="http://"
      autocomplete="off"
      value="{{ artist.avatar_url }}"
    >
  </div>
</div>

<div class="form">
  <div>Artista</div>
  <div>
    <input 
      type="text"
      name="name"
      placeholder="Nome Artístico"
      value="{{ artist.name }}"
      autocomplete="off"
    >
  </div>
</div>

<div class="form">
  <div>Data de Nascimento</div>
  <div>
    <input 
      type="date"
      name="birth"
      value="{{ artist.birth }}"
    >
  </div>
</div>

<div class="form">
  <div>Estilo Músical</div>
  <div>
    <input 
      type="text"
      name="musicalGenre"
      placeholder="Separe os gêneros músicais por virgula"
      value="{{ artist.musicalGenre }}"
      autocomplete="off"
    >
  </div>
</div>  

  <div class="form">
    <div>Tempo de Carreira</div>
    <div>
      <select name="experience">
        <option value="0-12"{% if artist.daw == "0-12"%}selected{% endif %}>
          0 a 12 meses
        </option>
        <option value="1-2"{% if artist.daw == "1-2"%}selected{% endif %}>
          1 a 2 anos
        </option>
        <option value="2-5"{% if artist.daw == "2-5"%}selected{% endif %}>
          2 a 5 anos
        </option>
        <option value="5+"{% if artist.daw == "5+"%}selected{% endif %}>
          5 anos ou +
        </option>
      </select>
    </div>
  </div>

  <div class="form">
  <div>Email</div>
  <div>
    <input 
      type="email"
      name="email"
      placeholder="exemplo@email.com"
      value="{{ artist.email }}"
      autocomplete="off"
    >
  </div>
</div> 

<div class="form">
  <div>Sexo</div>
  <div>
    <span>
      <input 
        type="radio"
        name="gender"
        value="M"
        {% if artist.gender == "M"%}
        checked
        {% endif %}
      >
      Masculino
    </span>

    <span>
      <input 
        type="radio"
        name="gender"
        value="F"
        {% if artist.gender == "F"%}
        checked
        {% endif %}
      >
      Feminino
    </span>
  </div>

  <button class="btn"type="submit">
    <span></span>
    <span></span>
    <span></span>
    <span></span>
    Salvar
  </button>
    
</div>



